<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 심전도 기능 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부정맥 기능"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Switch
            android:id="@+id/switch_ecg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부정맥 기능 on/off"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심장의 정상적인 리듬이 불규칙하게 변하는 상태를 의미합니다."
            android:layout_marginBottom="16dp"/>

        <!-- 서맥 기능 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서맥 기능"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Switch
            android:id="@+id/switch_bradycardia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서맥 기능 on/off"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서맥은 심장 박동수가 비정상적으로 느린 상태를 의미합니다."
            android:layout_marginBottom="16dp"/>

        <!-- 빈맥 기능 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빈맥 기능"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Switch
            android:id="@+id/switch_tachycardia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빈맥 기능 on/off"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빈맥은 심장 박동수가 비정상적으로 빠른 상태를 의미합니다."
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
